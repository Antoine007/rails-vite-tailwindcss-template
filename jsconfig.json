{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@/*": ["./app/*"],
      "~/*": ["./app/frontend/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ]
}